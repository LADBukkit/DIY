<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:DIY.Style">

    <!-- COLORS -->
    <Color x:Key="c_DIY_BG">#121212</Color>
    <Color x:Key="c_DIY_FG">#DEE4E7</Color>
    <Color x:Key="c_DIY_BUTTON_HOVER">#202020</Color>
    <Color x:Key="c_DIY_MENU_BG">#232323</Color>
    <Color x:Key="c_DIY_BRUSH_BG">#999999</Color>
    <Color x:Key="c_DIY_BRUSH_FG">#252525</Color>

    <SolidColorBrush x:Key="DIY_BG" Color="{StaticResource c_DIY_BG}"/>
    <SolidColorBrush x:Key="DIY_FG" Color="{StaticResource c_DIY_FG}"/>
    <SolidColorBrush x:Key="DIY_BUTTON_HOVER" Color="{StaticResource c_DIY_BUTTON_HOVER}" />
    <SolidColorBrush x:Key="DIY_MENU_BG" Color="{StaticResource c_DIY_MENU_BG}"/>
    <SolidColorBrush x:Key="DIY_BRUSH_FG" Color="{StaticResource c_DIY_BRUSH_BG}"/>
    <SolidColorBrush x:Key="DIY_BRUSH_BG" Color="{StaticResource c_DIY_BRUSH_FG}"/>

    <!-- STYLE -->
    <Style x:Key="DefaultStyle" TargetType="Control">
        <Setter Property="Background" Value="{DynamicResource DIY_BG}" />
        <Setter Property="Foreground" Value="{DynamicResource DIY_FG}" />
        <Setter Property="FontSize" Value="13" />
    </Style>
</ResourceDictionary>